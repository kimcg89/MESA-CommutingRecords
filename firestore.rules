rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 'records' 컬렉션에 대한 규칙
    match /records/{userId} {
      // 인증된 사용자이고, 요청하는 userId가 현재 사용자의 이메일과 같으면 읽기 및 쓰기 허용
      allow read, write: if request.auth != null && request.auth.token.email == userId;
    }

    // 'records' 아래의 'dates' 서브컬렉션에 대한 규칙 (날짜별 기록을 위한)
    match /records/{userId}/dates/{dateId} {
      // 인증된 사용자이고, 요청하는 userId가 현재 사용자의 이메일과 같으면 읽기 및 쓰기 허용
      allow read, write: if request.auth != null && request.auth.token.email == userId;
    }
  }
}